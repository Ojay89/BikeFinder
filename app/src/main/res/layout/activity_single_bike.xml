<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7f8c8d"
    tools:context=".SingleBikeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/singleBikeHeadingTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/singleBikeFrameNumberEditText"
                    android:text="Cyklens Stelnummer" />

                <EditText
                    android:id="@+id/singleBikeFrameNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Stelnummer"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/singleBikeKindOfBicycleSpinner"
                    android:text="Type" />

                <Spinner
                    android:id="@+id/singleBikeKindOfBicycleSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/singleBikeBrandEditText"
                    android:text="Mærke" />

                <EditText
                    android:id="@+id/singleBikeBrandEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mærke"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/singleBikeColorEditText"
                    android:text="Farve(r)" />

                <EditText
                    android:id="@+id/singleBikeColorEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farve(r)"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/singleBikePlaceEditText"
                    android:text="Lokation" />

                <EditText
                    android:id="@+id/singleBikePlaceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hvor er den fundet?"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/singleBikeDateEditText"
                    android:text="Dato" />

                <EditText
                    android:id="@+id/singleBikeDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dato for fundet/mistet cykel?"
                    android:inputType="datetime" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/singleBikeMissingFoundEditText"
                    android:text="Efterlyst/Fremlyst?" />

                <Spinner
                    android:id="@+id/singleBikeMissingFoundEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="updateButtonClicked"

                    android:text="Opdater" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="deleteBookButtonClicked"
                    android:text="Slet" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="backButtonClicked"
                    android:text="Tilbage" />

                <TextView
                    android:id="@+id/singleBikeMessageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>